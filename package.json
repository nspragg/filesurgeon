{
  "name": "filesurgeon",
  "version": "1.3.0",
  "description": "Manipulate files the easy way",
  "main": "index.js",
  "scripts": {
    "jsdoc": "jsdoc -c ./docconfig/jsdoc.json",
    "build": "npm run clean && tsc",
    "watch": "tsc --watch",
    "clean": "rm -fr dist/*",
    "prepublish": "npm run build",
    "prepublishOnly": "tsc -p ./ --outDir dist",
    "pretest": "npm run build",
    "test": "mocha",
    "posttest": "npm run lint",
    "lint": "tslint --project tsconfig.lint.json --format stylish",
    "lint:fix": "tslint --project tsconfig.lint.json --format stylish --fix",
    "coverage": "nyc mocha && nyc report --reporter=html && nyc report --reporter=json-summary"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/nspragg/filesurgeon.git"
  },
  "keywords": [
    "file",
    "search",
    "filesurgeon",
    "find",
    "promise",
    "fs",
    "file system",
    "edit",
    "write",
    "concat",
    "replace",
    "map",
    "filter",
    "append",
    "prepend"
  ],
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/nspragg/filesurgeon/issues"
  },
  "homepage": "https://github.com/nspragg/filesurgeon",
  "devDependencies": {
    "@types/mocha": "^2.2.43",
    "@types/node": "^8.10.39",
    "@types/typescript": "^2.0.0",
    "chai": "^4.2.0",
    "file-js": "^0.3.0",
    "jsdoc": "^3.4.3",
    "mocha": "^5.2.0",
    "nyc": "^11.9.0",
    "sinon": "^4.5.0",
    "source-map-support": "^0.5.9",
    "ts-node": "^7.0.1",
    "tslint": "^5.12.0",
    "tslint-config-airbnb": "^5.11.1",
    "tslint-microsoft-contrib": "^5.2.1",
    "typescript": "^2.9.2"
  },
  "nyc": {
    "include": [
      "src/*.ts"
    ],
    "extension": [
      ".ts"
    ],
    "require": [
      "ts-node/register"
    ],
    "sourceMap": true,
    "instrument": true
  },
  "dependencies": {
    "byline": "^5.0.0",
    "highland": "^2.13.0"
  }
}
